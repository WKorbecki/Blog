@model Blog.Areas.Admin.Models.Portfolio

@{
    ViewBag.Title = "Create";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            @using (Html.BeginForm())
            {
                <div class="box-body">
                    <div class="form-group">
                        <label>Title</label>
                        @Html.TextBoxFor(p => p.Title, new { @class = "form-control", @required = "required" })
                    </div>
                    <div class="form-group">
                        <label>About</label>
                        @Html.TextAreaFor(p => p.About, new { @class = "form-control", @required = "required" })
                    </div>
                    <div class="form-group">
                        <label>Date Create</label>
                        @Html.TextBoxFor(p => p.DateCreate, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date", @required = "required" })
                    </div>
                    <div class="form-group">
                        <label>Project Type</label>
                        @Html.DropDownListFor(p => p.ProjectType, new List<SelectListItem> { new SelectListItem { Text = "Game", Value = "1" } }, new { @class = "form-control", @required = "required", @style = "width: 100%" })
                    </div>
                    <div class="form-group">
                        <label>Programming Language</label>
                        @Html.DropDownListFor(p => p.Language, new List<SelectListItem> { new SelectListItem { Text = "C#", Value = "1" } }, new { @class = "form-control", @required = "required", @style = "width: 100%" })
                    </div>
                    <div class="form-group">
                        <label>Website</label>
                        @Html.TextBoxFor(p => p.WebPage, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Source Location</label>
                        @Html.TextBoxFor(p => p.SourceLocation, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Release Location</label>
                        @Html.TextBoxFor(p => p.ReleaseLocation, new { @class = "form-control" })
                    </div>
                </div>
                <div class="box-footer">
                    <button class="btn btn-primary" type="submit">Create</button>
                    <button class="btn btn-primary" type="reset">Clear</button>
                </div>
            }
        </div>
    </div>
</div>