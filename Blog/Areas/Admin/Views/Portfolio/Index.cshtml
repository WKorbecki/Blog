
@{
    ViewBag.Title = "Portfolio List";
}
@model IEnumerable<Blog.Areas.Admin.Models.Portfolio>

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                @Html.ActionLink("Create", "Create", "Portfolio", null, new { @class = "btn btn-primary" })
            </div>
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                ID
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Create Date
                            </th>
                            <th>
                                Type
                            </th>
                            <th>
                                Language
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @*@foreach (var portfolio in Model)*@
                        @foreach (var portfolio in Model)
                        {
                        <tr>
                            <td>
                                @portfolio.Id
                            </td>
                            <td>
                                @portfolio.Title
                            </td>
                            <td>
                                @portfolio.DateCreate.ToShortDateString()
                            </td>
                            <td>
                                @portfolio.ProjectType
                            </td>
                            <td>
                                @portfolio.Language
                            </td>
                            <td>
                                <button class="btn btn-primary"><i class="fa fa-edit"></i> Edit</button>
                                <button class="btn btn-primary"><i class="fa fa-trash"></i> Remove</button>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="box-footer">

            </div>
        </div>
    </div>
</div>